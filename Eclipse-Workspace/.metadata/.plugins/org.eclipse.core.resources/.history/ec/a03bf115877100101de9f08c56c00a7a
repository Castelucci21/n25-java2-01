package br.com.senaisp.bauru.secao03.aula05;

public class ShoppingCard01 {

	public static void main(String[] args) {
		//declarar as variaveis
		String custName ="Alex";
		String itemDesc = "Camiseta";
		double preço = 100.00;
		double imposto = 18.00;
		int quantidade = 1;
		
		//Montar a mensagem
		double totalPrice = preço * quantidade * (1+imposto/100);
		String message = custName + " quer comprar " + quantidade + " " + itemDesc + " que custa " + Math.round(totalPrice); 
		//imprimir a mensagem
		System.out.println(message);
	}

}
